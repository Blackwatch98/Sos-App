    <Button
        android:id="@+id/activityButton"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:background="@drawable/yellow_button"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.4" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="@id/activityButton"
        app:layout_constraintEnd_toEndOf="@id/activityButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/activityButton"
        app:layout_constraintTop_toTopOf="@id/activityButton"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start\nactivity"
        android:textSize="15sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:translationZ="60dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/activityButton"
        app:layout_constraintEnd_toEndOf="@id/activityButton"
        app:layout_constraintTop_toTopOf="@id/activityButton"
        app:layout_constraintStart_toStartOf="@id/activityButton" />

